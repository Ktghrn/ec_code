<div class="modal" data-modal="true" id="book_modal">
  <div class="modal-content max-w-[600px] top-[15%]">
      <div class="modal-header py-4 px-5">
          <h3 class="modal-title">Ma lecture</h3>
      </div>
      <div class="modal-body p-0 pb-5">
          <div class="scrollable-y-auto" data-scrollable="true" data-scrollable-max-height="auto"
               data-scrollable-offset="300px">
              {# Début du formulaire Symfony #}
              <div id="form-errors" class="text-red-500"></div> {# Conteneur d'erreurs #}
              {{ form_start(addBookform, {'attr': {'id': 'book-form'}}) }}
              <div class="flex flex-col gap-5 p-5">
                  <div class="flex flex-col gap-1">
                      {{ form_label(addBookform.name, 'Livre', {'label_attr': {'class': 'form-label font-normal text-gray-900'}}) }}
                      {{ form_widget(addBookform.name, {'attr': {'class': 'select'}}) }}
                      {{ form_errors(addBookform.name) }}
                  </div>

                  <div class="flex flex-col gap-1">
                      {{ form_label(addBookform.description, 'Mes notes', {'label_attr': {'class': 'form-label font-normal text-gray-900'}}) }}
                      <div class="flex flex-col w-full gap-1">
                          {{ form_widget(addBookform.description, {'attr': {'class': 'textarea', 'placeholder': "Notez ici les idées importantes de l'œuvre."}}) }}
                      </div>
                      {{ form_errors(addBookform.description) }}
                  </div>

                  <div class="flex flex-col gap-1">
                      {{ form_label(addBookform.rating, 'Note', {'label_attr': {'class': 'form-label font-normal text-gray-900'}}) }}
                      {{ form_widget(addBookform.rating, {'attr': {'class': 'select'}}) }}
                      {{ form_errors(addBookform.rating) }}
                  </div>

                  <div class="flex flex-col gap-1">
                      <label class="switch">
                          <span class="switch-label font-normal text-gray-900">Lecture terminée</span>
                          {{ form_widget(addBookform.completed, {'attr': {'value': 0}}) }}
                      </label>
                      {{ form_errors(addBookform.completed) }}
                  </div>

                  <div class="flex">
                      <button type="submit" class="btn btn-primary">Enregistrer</button>
                  </div>
              </div>
              {{ form_end(addBookform) }}
              {# Fin du formulaire Symfony #}
          </div>
      </div>
  </div>
</div>
<script src="{{ asset('js/book.js') }}"></script>
